<Window x:Class="WpfEFProfile.Wins.winConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Configuration" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Server:" />
            <TextBox Name="txtServer" Width="300" Text="."/>

            <TextBlock Text="Database:" />
            <TextBox Name="txtDatabase" Width="300" Text="testDB" />

            <TextBlock Text="User ID:" />
            <TextBox Name="txtUserID" Width="300" Text="sa"/>

            <TextBlock Text="Password:" />
            <PasswordBox Name="txtPassword" Width="300" Password="sa@123"/>

            <Button Name="btnSaveConfig" Content="Save" Width="100" Click="btnSaveConfig_Click" Margin="10"/>
            <Button Name="btnContest" Content="Test Connection" Width="100" Click="btnContest_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
