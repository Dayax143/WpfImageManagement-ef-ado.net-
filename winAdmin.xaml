<Window x:Class="WpfEFProfile.winAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Admin - TblLora Manager" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <!-- Input Fields -->
            <!-- PlaceholderText is not a valid property for TextBox in WPF. Use a TextBlock or Watermark approach instead -->
            <TextBox x:Name="txtLoraId" ToolTip="Lora ID" />
            <TextBox x:Name="txtCorSupply" ToolTip="CorSupply" />
            <TextBox x:Name="txtSerial" ToolTip="LoraSerial" />
            <TextBox x:Name="txtReceipt" ToolTip="ReceiptRv" />
            <TextBox x:Name="txtStatus" ToolTip="Status" />
            <TextBox x:Name="txtReference" ToolTip="Refference" />
            <DatePicker x:Name="dpDate" />

            <!-- CRUD Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button x:Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click" />
                <Button x:Name="btnRead" Content="Read" Width="100" Margin="5" Click="btnRead_Click" />
                <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" Click="btnUpdate_Click" />
                <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click" />
            </StackPanel>

            <!-- Navigation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnPrevious" Content="Previous" Width="100" Margin="5" Click="btnPrevious_Click" />
                <Button x:Name="btnNext" Content="Next" Width="100" Margin="5" Click="btnNext_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>