<Window x:Class="WpfEFProfile.winAdmin"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       Title="Admin - TblLora Manager" Height="827" Width="910"  
       WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <!-- Search Section -->
            <TextBlock Text="Search Profile:" Margin="0,0,0,10" FontWeight="Bold" FontSize="16"/>
            <TextBox x:Name="txtSearch" Width="200" Height="28" Margin="0,0,10,0" 
                         VerticalContentAlignment="Center" 
                         />
            <Button x:Name="btnSearch" Content="Search" Width="100" Height="28" Click="btnSearch_Click" />


            <!-- Input Fields Group -->
            <GroupBox Header="Profile Details" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Name:"/>
                    <TextBox Name="txtName" Margin="0,0,0,8"/>

                    <TextBlock Text="Quantity:"/>
                    <TextBox Name="txtQuantity" Margin="0,0,0,8"/>

                    <TextBlock Text="Profile Image:"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Name="btnUploadImage" Content="Upload Image" Width="100" Margin="0,0,10,0" Click="btnUploadImage_Click" />
                        <Image Name="imgProfile" Width="100" Height="100"/>
                    </StackPanel>

                    <TextBlock Text="Date:"/>
                    <DatePicker x:Name="dpDate" Margin="0,0,0,8"/>
                </StackPanel>
            </GroupBox>

            <!-- CRUD Buttons -->
            <UniformGrid Columns="4" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click" />
                <Button x:Name="btnRead" Content="Read" Width="100" Margin="5" />
                <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" />
                <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" />
            </UniformGrid>

            <!-- Navigation Buttons -->
            <UniformGrid Columns="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnPrevious" Content="Previous" Width="100" Margin="5" />
                <Button x:Name="btnNext" Content="Next" Width="100" Margin="5" />
            </UniformGrid>

            <!-- Backup and Restore -->
            <UniformGrid Columns="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnBackup" Content="Backup" Width="100" Margin="5" Click="btnBrowseFolder_Click" />
                <Button x:Name="btnRestore" Content="Restore" Width="100" Margin="5" Click="btnRestore_Click"/>
            </UniformGrid>

            <!-- Image Load Section -->
            <GroupBox Header="Test Profile Image" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">  
                   <Button x:Name="btnLoadImage" Content="Load Image" Width="100" Margin="5" Click="btnLoadImage_Click" />
                    <Button x:Name="btnBrowseImage" Content="Browse" Width="100" Margin="5" Click="btnBrowseFolder_Click" />  
                   <Image x:Name="imgTestProfile" Width="200" Height="200" Margin="10" />  
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>